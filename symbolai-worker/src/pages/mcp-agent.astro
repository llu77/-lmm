/**
 * MCP Agent Dashboard
 *
 * Modern React-based interface for interacting with the CloudflareMCPAgent.
 * Uses the Agents framework for real-time state synchronization.
 */

import { getSession } from '@/lib/session';
import { loadUserPermissions } from '@/lib/permissions';
import MCPAgentClient from '@/components/MCPAgentClient';

const sessionCookie = Astro.cookies.get('session')?.value;

if (!sessionCookie) {
  return Astro.redirect('/auth/login');
}

const session = await getSession(Astro.locals.runtime.env.SESSIONS, sessionCookie);

if (!session) {
  return Astro.redirect('/auth/login');
}

// Load permissions
const enhancedSession = await loadUserPermissions(Astro.locals.runtime.env.DB, session.userId);

// Check if admin
if (enhancedSession.role !== 'Admin') {
  return new Response('Forbidden: Admin access required', { status: 403 });
}

// Get MCP OAuth token for this user
const mcpTokenData = await Astro.locals.runtime.env.SESSIONS.get(`mcp_token:${session.userId}`);
let authToken: string | undefined;

if (mcpTokenData) {
  const mcpData = JSON.parse(mcpTokenData);
  authToken = mcpData.accessToken;
}

// Generate agent ID based on user
const agentId = `user-${session.userId}`;
