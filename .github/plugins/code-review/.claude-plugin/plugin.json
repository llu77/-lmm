{
  "name": "code-review",
  "version": "1.0.0",
  "displayName": "Automated Pull Request Code Review Plugin",
  "description": "Provides automated code review for pull requests using multiple specialized agents with confidence-based scoring",
  "author": "Anthropic",
  "commands": [
    {
      "name": "code-review",
      "description": "Automated PR review workflow",
      "path": "commands/code-review.js"
    }
  ],
  "agents": [
    {
      "name": "security-reviewer",
      "description": "Identifies security vulnerabilities and risks",
      "path": "agents/security-reviewer.md"
    },
    {
      "name": "performance-reviewer",
      "description": "Analyzes performance implications",
      "path": "agents/performance-reviewer.md"
    },
    {
      "name": "style-reviewer",
      "description": "Checks code style and consistency",
      "path": "agents/style-reviewer.md"
    },
    {
      "name": "logic-reviewer",
      "description": "Reviews business logic and correctness",
      "path": "agents/logic-reviewer.md"
    }
  ],
  "engines": {
    "claude-code": ">=1.0.0"
  },
  "keywords": [
    "code-review",
    "pull-request",
    "quality",
    "automation",
    "ci-cd"
  ]
}
